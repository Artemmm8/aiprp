@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
</head>
<body bgcolor="#aaccff">
    <Font color="green" size="10">
        Форма для работы со словарем
    </Font>
    <br> <br>
    <form name="frm" method="post">
        <Font color="blue" size="6"> Введите русское слово:</Font> <input autocomplete="off" type="text" name="RussianWord" value="@ViewBag.RussianWord" />

        <br> <br>

        <Font color="blue" size="6">Перевод: </Font> <input autocomplete="off" type="text" name="EnglishWord" value="@ViewBag.EnglishWord" />
        <h4>
            Кликни здесь для получения перевода: <input type="submit" value="Перевести" />
        </h4>
    </form>
</body>
</html>